{
  "recipe_id": "battery_disassembly_v1",
  "description": "Battery disassembly procedure for recycling",
  "version": "1.0",
  "steps": [
    {
      "step_id": 1,
      "action": "recognize",
      "target": "battery_screws",
      "parameters": {
        "model": "screw_detection_v2",
        "confidence": 0.95
      }
    },
    {
      "step_id": 2,
      "action": "unscrew",
      "target": "identified_screws",
      "parameters": {
        "torque": "2Nm",
        "speed": "medium"
      }
    },
    {
      "step_id": 3,
      "action": "remove",
      "target": "battery_cover",
      "parameters": {
        "force": "gentle",
        "direction": "upward"
      }
    }
  ],
  "safety_checks": {
    "voltage_threshold": "0V",
    "temperature_limit": "35C"
  }
} 